<%= simple_form_for(@spike, html: { class: 'well form-inline spike' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t('.cancel'), spikes_path, class: 'btn' %>
  </div>
<% end %>
