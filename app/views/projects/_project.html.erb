<div class="row">
  <% if current_user %>
    <%= form_for(current_user.memberships.build(project_id: project.id)) do |f| %>
      <div><%= f.hidden_field :project_id %></div>
      <% if current_user.member_of?(project) %>
        <%= f.submit t('.leave_project'), class: "btn btn-large btn-danger pull-right" %>
      <% else %>
        <%= f.submit t('.join_project'), class: "btn btn-large btn-success pull-right" %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to t('.join_project'), '/auth/meetup', class: "btn btn-large btn-success pull-right" %>
  <% end %>
  <h2><%= project.title %></h3>
  <p><%= project.description %></p>
  <p><%= link_to project.github_url, project.github_url %></p>

  <ul class="attending">
    <% project.members.each do |member| %>
      <li class="member">
        <%= image_tag(member.photo.thumb('50x50#').url) if member.photo %>
        <span class="<%= member.upcoming_rsvp_response %>">Is <%= member.name %> comming to the next meetup? : <%= member.upcoming_rsvp_response %></span>
      </li>
    <% end %>
  </ul>
  <ul class="media-grid">
    <li>
    <%#= image_tag project.photo_url, :width => 80 %>
    </li>
  </ul>
</div>
